// cSpell Settings
{
    // Version of the setting file.  Always 0.2
    "version": "0.2",
    //
    "enabled": true,
    // language - current active spelling language
    "language": "en, es",
    //
    "languageSettings": [
        {
            "languageId": "python",
            "includeRegExpList": [
                "#.*",
                "/[']{3}*?[']{3}/g",
                "/[\"]{3}*?[\"]{3}/g"
            ]
        },
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "[`]{3}(.+\n)+[`]{3}",
                "[$]{1,2}.*?[$]{1,2}"
            ]
        },
        {
            "languageId": "rust",
            "includeRegExpList": [
                "[/]{2,3}.*",
                "[/][*]+\n?([\\S\\s]*?)[*][/]"
            ],
            "dictionaries": [
                "rustDictionary"
            ]
        }
    ],
    // flagWords - list of words to be always considered incorrect
    // This is useful for offensive words and common spelling errors.
    "flagWords": [],
    //
    "enableFiletypes": [
        "rust",
        "markdown"
    ],
    // Specify paths/files to ignore.
    "ignorePaths": [
        "**/node_modules", // this will ignore anything the node_modules directory
        ".git", // Ignore the .git directory
        "*.toml", // Ignore all .toml files.
        "/*.code-workspace"
    ],
    // words - list of words to be always considered correct
    "words": [
        "eucl√≠deo",
        "eucl√≠dea",
        "iterador",
        "Mouredev",
        "tetrominoes",
        "tripleta",
        "tupla",
        "ùòµùêØ",
        "ùòµ«ÅùóΩ",
        "«ÅŒîùóΩ"
    ],
    // custom dictionaries
    "dictionaryDefinitions": [
        {
            "name": "rustDictionary",
            "path": "./rustDictionary.txt",
            "addWords": true
        }
    ],
    "dictionaries": [
        "rustDictionary"
    ]
}